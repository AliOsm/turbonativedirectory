<ul role="list" class="mx-auto mt-12 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-3 lg:mx-0 lg:max-w-none lg:grid-cols-4">
  <% APP_DETAILS.each do |app| %>
    <%= render "app",
                name: app['name'],
                app_category: app['app_category'],
                ios_url: app['ios_url'],
                android_url: app['android_url'],
                image: app['image']
    %>
  <% end %>
</ul>
